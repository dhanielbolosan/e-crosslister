{
  "manifest_version": 3,
  "name": "e-crosslister",
  "version": "1.0.0",
  "description": "Crosslist your e-commerce listings",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "*://*.depop.com/*",
    "*://*.vinted.com/*",
    "*://*.vinted.co.uk/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://depop.com/*", "*://*.depop.com/*"],
      "js": ["src/content-scripts/depop/index.ts"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://vinted.com/*", "*://*.vinted.com/*", "*://*.vinted.co.uk/*"],
      "js": ["src/content-scripts/vinted/index.ts"],
      "run_at": "document_idle"
    }
  ]
}